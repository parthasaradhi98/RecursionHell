{
  "scripts": {
    "start": "run-p server client",
    "server": "node server/server.js",
    "client": "npm start --prefix frontend",
    "heroku-postbuild": "npm run install-server && npm run install-client && npm run build",
    "install-server": "npm install --prefix server",
    "install-client": "cd frontend && npm install --legacy-peer-deps",
    "build": "cd frontend && npm run build",
    "client-install": "npm --prefix frontend install --legacy-peer-deps"
  },
  "dependencies": {
    "concurrently": "^7.4.0",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.3",
    "npm-run-all": "^4.1.5"
  }
}
